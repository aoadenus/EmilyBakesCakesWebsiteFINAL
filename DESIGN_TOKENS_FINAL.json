{
  "metadata": {
    "name": "Emily Bakes Cakes Design System",
    "version": "1.0.0",
    "description": "Unified design tokens for dual-interface bakery system",
    "lastUpdated": "2025-11-02",
    "author": "Emily Bakes Cakes Design Team",
    "wcagCompliance": "AA",
    "colorSystem": "Vanilla Raspberry"
  },
  
  "colors": {
    "brand": {
      "raspberry": {
        "value": "#C44569",
        "description": "Primary brand color - CTAs, accents, highlights",
        "contrastOnWhite": "4.67:1",
        "usage": ["buttons", "links", "icons", "focus-rings"],
        "wcag": "AA"
      },
      "cream": {
        "value": "#F8EBD7",
        "description": "Background base for light mode areas",
        "usage": ["page-backgrounds", "section-fills", "card-backgrounds"],
        "wcag": "N/A (background)"
      },
      "charcoal": {
        "value": "#2B2B2B",
        "description": "Surface dark for panels, footer, admin interface",
        "contrastOnWhite": "15.3:1",
        "usage": ["admin-sidebar", "footer", "dark-sections", "primary-text"],
        "wcag": "AAA"
      },
      "white": {
        "value": "#FFFFFF",
        "description": "Pure white for cards and elevated surfaces",
        "usage": ["cards", "modals", "dropdowns", "buttons"],
        "wcag": "N/A (background)"
      },
      "softGray": {
        "value": "#E9E9E9",
        "description": "Dividers and secondary backgrounds",
        "usage": ["borders", "dividers", "disabled-states"],
        "wcag": "N/A (borders)"
      }
    },
    
    "text": {
      "onLight": {
        "value": "#2B2B2B",
        "description": "Dark text on light backgrounds",
        "contrastOnCream": "7.2:1",
        "wcag": "AAA"
      },
      "onDark": {
        "value": "#FFFFFF",
        "description": "Light text on dark backgrounds",
        "contrastOnCharcoal": "15.3:1",
        "wcag": "AAA"
      },
      "mutedLight": {
        "value": "rgba(43, 43, 43, 0.65)",
        "description": "Muted text on light backgrounds",
        "contrastOnCream": "4.6:1",
        "wcag": "AA"
      },
      "mutedDark": {
        "value": "rgba(255, 255, 255, 0.75)",
        "description": "Muted text on dark backgrounds",
        "contrastOnCharcoal": "11.5:1",
        "wcag": "AAA"
      }
    },
    
    "semantic": {
      "success": {
        "value": "#59C9A5",
        "description": "Success states and confirmations",
        "contrastOnWhite": "3.8:1",
        "usage": ["toast-success", "status-badges", "validation"],
        "wcag": "AA (large text)"
      },
      "error": {
        "value": "#C44569",
        "description": "Error states and warnings (uses brand raspberry)",
        "contrastOnWhite": "4.67:1",
        "usage": ["toast-error", "validation-errors", "destructive-actions"],
        "wcag": "AA"
      },
      "warning": {
        "value": "#FFD166",
        "description": "Warning states and cautions",
        "contrastOnWhite": "1.8:1",
        "usage": ["toast-warning", "alert-badges"],
        "wcag": "Fail (use with dark text)",
        "textColor": "#2B2B2B"
      },
      "info": {
        "value": "#F8EBD7",
        "description": "Informational states (uses brand cream)",
        "contrastOnWhite": "1.1:1",
        "usage": ["toast-info", "helper-text"],
        "wcag": "N/A (background)",
        "textColor": "#2B2B2B",
        "iconColor": "#C44569"
      }
    },
    
    "toast": {
      "error": {
        "background": "#C44569",
        "border": "#E36B86",
        "text": "#FFFFFF"
      },
      "warning": {
        "background": "#FFD166",
        "border": "#F6C343",
        "text": "#2B2B2B"
      },
      "success": {
        "background": "#59C9A5",
        "border": "#4BB491",
        "text": "#FFFFFF"
      },
      "info": {
        "background": "#F8EBD7",
        "border": "#EAD4B8",
        "text": "#2B2B2B",
        "icon": "#C44569"
      }
    },
    
    "borders": {
      "light": {
        "value": "#E0E0E0",
        "description": "1px borders on light backgrounds",
        "usage": ["input-borders", "card-borders", "dividers"]
      },
      "dark": {
        "value": "rgba(255, 255, 255, 0.15)",
        "description": "Borders on dark backgrounds",
        "usage": ["admin-borders", "dark-section-dividers"]
      }
    },
    
    "darkMode": {
      "bgBase": "#1A1A1A",
      "bgCard": "#2B2B2B",
      "bgElevated": "#333333",
      "textPrimary": "#FFFFFF",
      "textSecondary": "#CCCCCC",
      "textMuted": "#999999",
      "accent": "#C44569",
      "border": "#3A3A3A"
    }
  },
  
  "typography": {
    "fontFamilies": {
      "heading": {
        "value": "'Playfair Display', serif",
        "description": "Serif font for H1 headers",
        "weights": [400, 600, 700],
        "fallback": "Georgia, serif"
      },
      "subheading": {
        "value": "'Poppins', sans-serif",
        "description": "Sans-serif font for H2-H6 subheadings",
        "weights": [400, 500, 600, 700],
        "fallback": "-apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif"
      },
      "body": {
        "value": "'Open Sans', sans-serif",
        "description": "Sans-serif font for body text",
        "weights": [400, 500, 600],
        "fallback": "-apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif"
      },
      "accent": {
        "value": "'Lucida Handwriting', cursive",
        "description": "Cursive font for accent taglines",
        "weights": [400],
        "fallback": "cursive"
      }
    },
    
    "scale": {
      "h1": {
        "fontFamily": "Playfair Display",
        "fontWeight": 700,
        "fontSize": "clamp(40px, 5vw, 48px)",
        "lineHeight": 1.2,
        "letterSpacing": "-0.02em",
        "usage": ["hero-titles", "page-headers"]
      },
      "h2": {
        "fontFamily": "Poppins",
        "fontWeight": 600,
        "fontSize": "clamp(28px, 4vw, 32px)",
        "lineHeight": 1.3,
        "letterSpacing": "-0.01em",
        "usage": ["section-headers"]
      },
      "h3": {
        "fontFamily": "Poppins",
        "fontWeight": 600,
        "fontSize": "clamp(22px, 3.5vw, 28px)",
        "lineHeight": 1.3,
        "usage": ["subsection-headers", "card-titles"]
      },
      "h4": {
        "fontFamily": "Poppins",
        "fontWeight": 600,
        "fontSize": "clamp(18px, 3vw, 24px)",
        "lineHeight": 1.4,
        "usage": ["component-titles", "modal-headers"]
      },
      "h5": {
        "fontFamily": "Poppins",
        "fontWeight": 600,
        "fontSize": "clamp(16px, 2.5vw, 20px)",
        "lineHeight": 1.4,
        "usage": ["small-section-headers"]
      },
      "h6": {
        "fontFamily": "Poppins",
        "fontWeight": 600,
        "fontSize": "clamp(14px, 2vw, 18px)",
        "lineHeight": 1.5,
        "usage": ["card-subtitles", "labels"]
      },
      "body": {
        "fontFamily": "Open Sans",
        "fontWeight": 400,
        "fontSize": "clamp(16px, 2vw, 18px)",
        "lineHeight": 1.7,
        "usage": ["paragraphs", "body-text"]
      },
      "bodySmall": {
        "fontFamily": "Open Sans",
        "fontWeight": 400,
        "fontSize": "14px",
        "lineHeight": 1.6,
        "usage": ["helper-text", "captions"]
      },
      "tagline": {
        "fontFamily": "Lucida Handwriting",
        "fontWeight": 400,
        "fontSize": "clamp(18px, 2.5vw, 20px)",
        "lineHeight": 1.5,
        "fontStyle": "italic",
        "usage": ["accent-taglines", "hero-subheadings"]
      }
    }
  },
  
  "spacing": {
    "scale": {
      "1": {
        "value": "8px",
        "description": "Base unit (1x)"
      },
      "2": {
        "value": "16px",
        "description": "Double unit (2x)"
      },
      "3": {
        "value": "24px",
        "description": "Triple unit (3x) - standard card padding"
      },
      "4": {
        "value": "32px",
        "description": "Quad unit (4x)"
      },
      "5": {
        "value": "40px",
        "description": "5x unit"
      },
      "6": {
        "value": "48px",
        "description": "6x unit - form heights"
      },
      "8": {
        "value": "64px",
        "description": "8x unit - section spacing"
      },
      "12": {
        "value": "96px",
        "description": "12x unit - large section spacing"
      }
    },
    "grid": {
      "base": "8px",
      "description": "All spacing follows 8-point grid system"
    }
  },
  
  "borderRadius": {
    "sm": {
      "value": "8px",
      "usage": ["buttons", "inputs", "small-cards"]
    },
    "md": {
      "value": "12px",
      "usage": ["cards", "modals", "toasts", "standard-components"],
      "isPrimary": true
    },
    "lg": {
      "value": "16px",
      "usage": ["hero-cards", "feature-sections"]
    },
    "xl": {
      "value": "24px",
      "usage": ["large-hero-elements", "glassmorphism-cards"]
    },
    "full": {
      "value": "9999px",
      "usage": ["circular-elements", "pills", "badges"]
    }
  },
  
  "shadows": {
    "card": {
      "value": "0 2px 8px rgba(0, 0, 0, 0.08)",
      "description": "Default card shadow",
      "usage": ["cards", "dropdowns", "tooltips"]
    },
    "hover": {
      "value": "0 4px 16px rgba(0, 0, 0, 0.12)",
      "description": "Hover state shadow",
      "usage": ["card-hover", "button-hover"]
    },
    "button": {
      "value": "0 2px 6px rgba(0, 0, 0, 0.12)",
      "description": "Button shadow",
      "usage": ["buttons", "CTAs"]
    },
    "raspberry": {
      "value": "0 4px 16px rgba(196, 69, 105, 0.3)",
      "description": "Brand-colored shadow",
      "usage": ["primary-buttons", "focus-states", "hero-CTAs"]
    },
    "focus": {
      "value": "0 0 0 3px rgba(196, 69, 105, 0.15)",
      "description": "Focus ring glow",
      "usage": ["input-focus", "button-focus"]
    }
  },
  
  "transitions": {
    "base": {
      "value": "250ms cubic-bezier(0.4, 0, 0.2, 1)",
      "description": "Standard transition for most interactions",
      "usage": ["buttons", "cards", "inputs"]
    },
    "smooth": {
      "value": "300ms ease-out",
      "description": "Smooth transition for animations",
      "usage": ["dropdowns", "modals", "toasts"]
    },
    "quick": {
      "value": "150ms ease-out",
      "description": "Quick transition for micro-interactions",
      "usage": ["nav-underlines", "icon-scales"]
    },
    "slow": {
      "value": "600ms ease-in-out",
      "description": "Slow transition for emphasis",
      "usage": ["price-pulse", "attention-grabbers"]
    }
  },
  
  "components": {
    "button": {
      "primary": {
        "background": "#C44569",
        "color": "#FFFFFF",
        "borderRadius": "8px",
        "padding": {
          "sm": "8px 16px",
          "md": "12px 24px",
          "lg": "16px 32px"
        },
        "minHeight": {
          "sm": "36px",
          "md": "44px",
          "lg": "48px"
        },
        "fontSize": {
          "sm": "14px",
          "md": "16px",
          "lg": "18px"
        },
        "fontFamily": "Poppins",
        "fontWeight": 600,
        "boxShadow": "0 2px 8px rgba(196, 69, 105, 0.25)",
        "hover": {
          "transform": "scale(1.05) translateY(-2px)",
          "boxShadow": "0 4px 16px rgba(196, 69, 105, 0.35)"
        },
        "disabled": {
          "opacity": 0.6,
          "cursor": "not-allowed"
        }
      },
      "secondary": {
        "background": "#FFFFFF",
        "color": "#5A3825",
        "border": "1px solid #5A3825",
        "borderRadius": "8px",
        "padding": {
          "sm": "8px 16px",
          "md": "12px 24px",
          "lg": "16px 32px"
        },
        "minHeight": {
          "sm": "36px",
          "md": "44px",
          "lg": "48px"
        },
        "hover": {
          "transform": "translateY(-2px)",
          "borderColor": "#C44569",
          "boxShadow": "0 4px 12px rgba(90, 56, 37, 0.15)"
        }
      },
      "ghost": {
        "background": "transparent",
        "color": "#C44569",
        "border": "none",
        "borderRadius": "8px",
        "padding": {
          "sm": "8px 16px",
          "md": "12px 24px",
          "lg": "16px 32px"
        },
        "hover": {
          "transform": "scale(1.05)",
          "color": "#D4567A"
        }
      }
    },
    
    "input": {
      "height": "48px",
      "padding": "12px",
      "borderRadius": "8px",
      "border": "1px solid #2B2B2B",
      "fontFamily": "Open Sans",
      "fontSize": "16px",
      "focus": {
        "borderColor": "#C44569",
        "boxShadow": "0 0 0 3px rgba(196, 69, 105, 0.1)"
      },
      "error": {
        "borderColor": "#EF4444",
        "boxShadow": "0 0 0 3px rgba(239, 68, 68, 0.1)"
      }
    },
    
    "card": {
      "background": "#FFFFFF",
      "borderRadius": "12px",
      "padding": "24px",
      "boxShadow": "0 2px 8px rgba(0, 0, 0, 0.08)",
      "hover": {
        "boxShadow": "0 4px 16px rgba(0, 0, 0, 0.12)",
        "transform": "translateY(-4px)"
      }
    },
    
    "badge": {
      "fontFamily": "Poppins",
      "fontWeight": 600,
      "textTransform": "capitalize",
      "letterSpacing": "0.02em",
      "borderRadius": {
        "sm": "4px",
        "md": "6px",
        "lg": "8px"
      },
      "padding": {
        "sm": "2px 8px",
        "md": "4px 12px",
        "lg": "6px 16px"
      },
      "fontSize": {
        "sm": "11px",
        "md": "12px",
        "lg": "14px"
      },
      "statuses": {
        "pending": {
          "background": "#FEF3C7",
          "color": "#92400E"
        },
        "inProgress": {
          "background": "#3B82F6",
          "color": "#FFFFFF"
        },
        "completed": {
          "background": "#10B981",
          "color": "#FFFFFF"
        },
        "ready": {
          "background": "#C44569",
          "color": "#FFFFFF"
        },
        "cancelled": {
          "background": "#6B7280",
          "color": "#FFFFFF"
        }
      }
    },
    
    "toast": {
      "width": {
        "desktop": "400px",
        "mobile": "90vw"
      },
      "borderRadius": "12px",
      "padding": "16px",
      "gap": "8px",
      "backdropFilter": "blur(16px)",
      "animation": "slide-in 300ms ease-out",
      "position": {
        "public": "top-right",
        "admin": "top-center"
      },
      "maxStack": 5,
      "autoDismiss": {
        "success": "5s",
        "info": "5s",
        "warning": "8s",
        "error": "8s"
      }
    }
  },
  
  "accessibility": {
    "focusRing": {
      "outline": "2px solid #C44569",
      "outlineOffset": "2px",
      "borderRadius": "4px"
    },
    "touchTargets": {
      "minimum": "44px",
      "recommended": "48px"
    },
    "contrastRatios": {
      "normalText": {
        "AA": "4.5:1",
        "AAA": "7:1"
      },
      "largeText": {
        "AA": "3:1",
        "AAA": "4.5:1"
      },
      "uiComponents": {
        "AA": "3:1"
      }
    }
  },
  
  "breakpoints": {
    "mobile": {
      "max": "767px",
      "columns": 1,
      "gutter": "16px",
      "margin": "16px"
    },
    "tablet": {
      "min": "768px",
      "max": "1023px",
      "columns": 2,
      "gutter": "24px",
      "margin": "32px"
    },
    "desktop": {
      "min": "1024px",
      "columns": 3,
      "gutter": "32px",
      "margin": "64px"
    },
    "wide": {
      "min": "1440px",
      "columns": 4,
      "gutter": "32px",
      "margin": "auto",
      "maxWidth": "1440px"
    }
  },
  
  "animation": {
    "duration": {
      "instant": "0ms",
      "fast": "150ms",
      "base": "200ms",
      "smooth": "300ms",
      "emphasis": "600ms",
      "ambient": "10s"
    },
    "easing": {
      "easeOut": "ease-out",
      "easeInOut": "ease-in-out",
      "cubicBezier": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "prefers-reduced-motion": {
      "duration": "0.01ms",
      "iterations": 1
    }
  },
  
  "zIndex": {
    "base": 1,
    "dropdown": 1000,
    "sticky": 1100,
    "modal": 5000,
    "toast": 9999,
    "skipLink": 9999
  }
}
